{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://stac-extensions.github.io/storage/v1.0.0/schema.json",
  "title": "Storage Extension",
  "description": "STAC Storage Object Extension to a STAC Item and STAC Assets.",
  "definitions": {
    "storage": {
      "type": "object",
      "required": [
        "stac_extensions",
        "properties",
        "assets"
      ],
      "properties": {
        "stac_extensions": {
          "type": "array",
          "contains": {
            "const": "https://stac-extensions.github.io/sar/v1.0.0/schema.json"
          }
        },
        "properties": {
          "type": "object",
          "required": [
            "storage:platform",
            "storage:region",
            "storage:requester_pays"
          ],
          "properties": {
            "storage:platform": {
              "title": "Platform",
              "type": "string",
              "enum": [
                "UNKNOWN_CLOUD_PLATFORM",
                "AWS",
                "GCP",
                "AZURE",
                "IBM",
                "ALIBABA",
                "ORACLE"
              ],
              "default": "UNKNOWN_CLOUD_PLATFORM"
            },
            "storage:manager": {
              "title": "Manager",
              "type": "string"
            },
            "storage:region": {
              "title": "Region",
              "type": "string"
            },
            "storage:bucket": {
              "title": "Bucket",
              "type": "string"
            },
            "storage:object_path": {
              "title": "Object Path",
              "type": "string"
            },
            "storage:requester_pays": {
              "type": "boolean",
              "title": "Requester pays",
              "default": true
            },
            "storage:tier": {
              "title": "Tier",
              "type": "string"
            },
            "storage:tier_duration": {
              "title": "Tier Duration",
              "type": "integer",
              "default": 0
            },
            "storage:first_byte_latency": {
              "title": "Tier",
              "type": "string"
            },
            "storage:date_stored": {
              "title": "Date Stored",
              "type": "string",
              "format": "date-time"
            },
            "storage:min_tier_duration": {
              "title": "Minimum Duration for Tier",
              "type": "integer",
              "default": 0
            },
            "storage:max_tier_duration": {
              "title": "Maxiumum Duration for Tier",
              "type": "integer",
              "default": 0
            },
            "storage:archived": {
              "title": "Archived",
              "type": "boolean",
              "default": false
            }
          }
        }
      }
    }
  }
}
